@import('pages/vender.styl')
.sect-item
	margin-top 40px
	h3
		height 50px
		line-height 50px 
		font-size 20px 
		font-weight bold
		text-indent 10px
		width 100%
		color #fff
		margin-bottom 20px
		background-image url('../images/plate-back.png')
		box-shadow 0 0 10px 0 rgba(0,0,0,.2)
		.more 
			color #FA1C31
			font-size 16px
.recommend
	height 520px
	.fl 
		width 300px
		height 100%
		position relative
		border-radius 5px
		overflow hidden
		box-shadow 0 0 15px 0 rgba(0,0,0,.35)
		.wra-showitem 
			width 600px
		a 
			padding 30px 10px 25px
			box-sizing border-box
			width 300px
			height 100%
			float left
		.img 
			width 128px
			height 128px
			margin 0 auto
			overflow hidden
			border-radius 10px
			img 
				width 100%
				height 100%
		p 
			font-size 12px
			&.title 
				font-size 16px
				margin-top 20px
				height 3.2em
				overflow hidden
			&.desc
				height 7.4em
				overflow hidden 
				margin-top 15px
				margin-bottom 30px
				font-size 14px
		.btn 
			margin 25px auto 0
			display block
			width 250px
			height 40px
			line-height 40px
			text-align center
			background-color #222
			border-radius 8px
	ul.fr 
		width 900px
		li 
			float left
			width 150px
			height 160px
			box-sizing border-box
			padding 15px 8px
			cursor pointer
			margin-top 20px
			&:nth-child(-n+6)
				margin-top 0
			.img 
				height 80px
				width 80px
				border-radius 10px
				overflow hidden
				margin 0 auto 
				img 
					width 100%
					height 100%
			p 
				text-align center
				margin-top 20px
				height 3.2em 
				overflow hidden
			&.active,&:hover
				p 
					color #FA1C31

.classfiy
	height 630px
	.check-nva
		background-color rgba(0,0,0,.5)
		height 40px
		line-height 40px
		li 
			float left
			width 25%
			text-align center
			font-size 16px
			cursor pointer
			i 
				font-size 24px 
				margin-right 8px 
				vertical-align sub
			&.active
				background-image url('../images/plate-back.png')
				background-repeat repeat
				box-shadow 0 0 5px 0 rgba(0,0,0,.8)
				color #fff
	.classfiy-wra
		width 100%
		overflow hidden
		position relative
		margin-top 10px
		ul 
			width 5000px
			li
				width 1200px
				float left
				min-height 1px
				&.soft 
					padding 0 6px
					box-sizing border-box
					a 
						display inline-block
						width 346px
						height 131px 
						margin 18px 15px 0 0
						padding 20px
						overflow hidden
						border-bottom 4px solid rgba(0,0,0,0)
						box-shadow 0 0 10px 0 rgba(0,0,0,.35)
						&:nth-child(3n)
							margin-right 0
						&:nth-child(-n+3)
							margin-top 0
						&:hover 
							border-color #FA1C31
							.item
								.img 
									img 
									    transform: rotateY(180deg)
						.item 
							height 100px 
							.img 
								width 100px
								height 100px 
								border-radius 10px
								overflow hidden
								float left
								margin-right 20px
								img 
									width 100%
									height 100%	
								    transform: rotateY(0);
								    transition: transform .4s linear;	
							.content
								overflow hidden
								p
									&.title 
										font-size 16px
										height 3.2em 
										overflow hidden
									&.version
										margin-top 15px
										font-size 12px
						.info
							font-size 12px
							margin-top 15px
							span 
								display inline-block
								width 30%							
								margin-right 8px
								overflow hidden
				&.pic
					a 
						width 285px 
						height 180px 
						float left
						margin 0 20px 16px 0
						position relative
						overflow hidden
						&:nth-child(4n)
							margin-right 0
						&:hover 
							img 
								transform translateX(-50%) scale(1.1)
						img 
							height 100%
							min-width 100%
							margin-left 50%
							transform translateX(-50%)
							transition all .4s
						p 
							position absolute
							width 100%
							line-height 40px 
							height 40px
							background-color rgba(0,0,0,.4)
							text-align center
							padding 0 10px 
							box-sizing border-box
							bottom 0px
							left 0px
				&.article 
					padding 0 16px
					box-sizing border-box
					a 
						width 568px 
						height 174px
						float left
						margin 0 32px 26px 0
						border-radius 5px
						&:nth-child(2n)
							margin-right 0
						&:hover 
							background-color rgba(51,51,51,.5)
							box-shadow 0 0 15px 0 rgba(0,0,0,.3)
							.content
								.title 
									color #FA1C31
						.img 
							background-image url('../images/mac-back.png')
							background-repeat no-repeat
							width 210px
							height 100%
							background-position center
							background-size 100%
							margin-right 20px 
							padding 9px 12px 52px
							box-sizing border-box
							.img-wra
								height 100%
								width 100%
								overflow hidden
								img 
									height 100%
									min-width 100%
									margin-left 50%
									transform translateX(-50%)
						.content
							overflow hidden
							padding-right 20px
							.title 
								font-size 16px 
								margin-top 6px
								height 3.2em 
								overflow hidden
							.desc
								height 4.8em 
								overflow hidden
								margin-top 6px 
							.time-more
								font-size 12px 
								margin-top 15px
								.fr 
									color #FA1C31
.rec-item
	.fl 
		width 790px 
		ul 
			&.rec-first
				li 
					&:hover 
						transform translate3d(0,-6px,0)
						box-shadow 0 0 15px 1px rgba(0,0,0,.3)
			&.rec-sec
				li 
					background-color rgba(51, 51, 51, 0.5)
					&:hover 
						background-image url('../images/plate-hover.png')
						
			li 
				width 166px
				height 250px
				padding 20px 12px 10px 
				float left
				// background-color rgba(51, 51, 51, 0.5)
				overflow hidden
				margin-right 10px 
				margin-top 10px
				transform translate3d(0,0,0)	
				transition all .4s
				&:nth-child(4n)
					margin-right 0
				&:nth-child(-n+4)
					margin-top 0
				.img 
					width 100px 
					height 100px 
					border-radius 10px 
					margin 0 auto
					img 
						width 100%
						height 100%
				p 
					&.title 
						margin-top 15px 
						height 4.8em 
						overflow hidden	
						padding 0 3px
					&.version 
						text-align center
						margin-top 12px
					&.info 
						font-size 12px 
						margin-top 18px
						span 
							display inline-block
							width 49% 
							overflow hidden
							white-space nowrap
		
	.fr.rank 
		width 395px
		ul 
			li 
				width 100% 
				margin-bottom 3px 
				position relative 
				padding 10px 0 10px 50px 
				box-sizing border-box
				&:last-child
					margin-bottom 0
				&.active 
					background-color rgba(34, 34, 34, 1)
					box-shadow 0 0 10px 0 rgba(0,0,0,.5)
					.title 
						color #fff
					.img
						display block
					.content
						.info 
							display block
				i.num 
					position absolute
					width 24px 
					height 24px 
					line-height 24px 
					text-align center
					color #fff
					left 16px 
					top 50%
					margin-top -12px
					background-color #999
					border-radius 50%
					font-style normal
				.img 
					width 50px 
					height 50px 
					overflow hidden
					border-radius 5px 
					float left
					margin-right 10px
					display none
					img 
						width 100%
						height 100%	
				.content 
					overflow hidden
					margin-left 5px
					padding-right 5px
					.title
						margin 3px 0
						overflow hidden
					.info 
						font-size 12px 
						display none
		
body.day 
	.rec-item						
		.fl 
			ul 
				li 
					background-color transparent	
				&.rec-sec
					li 
						background-color rgba(255,255,255,.5)
						&:hover 
							background-color #f9f9f9	
							background-image none		
							box-shadow 0 0 10px 0px rgba(0,0,0,.3)
.material
	ul 
		padding 0 5px
		li 
			height 210px 
			width 290px 
			float left
			margin-right 10px
			margin-top 10px 
			&:hover 
				.img 
					img 
						transform translateX(-50%) scale(1.2)
			&:nth-child(4n) 
				margin-right 0
			&:nth-child(-n+4) 
				margin-top 0
			.img 
				width 100% 
				height 170px 
				overflow hidden
				position relative
				img 
					position absolute
					left 50%
					transform translateX(-50%)
					height 100%
					transition all .4s
			p 
				height 40px 
				line-height 40px 
				text-align center
				background-color rgba(51, 51, 51, 0.5)

.friend-link
	font-size 0
	a 
		font-size 14px
		display inline-block
		width 10%
		margin-right 1%
		margin-top 10px
		text-align center
		&:nth-child(9n)
			margin-right 0
		
			

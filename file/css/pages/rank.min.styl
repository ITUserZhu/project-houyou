@import('vender.styl')
.content 
	margin-top 30px
	nav.fl 
		width 200px 
		li 
			line-height 50px 
			width 100%
			text-align center
			background-color rgba(51, 51, 51, .5)
			font-size 16px
			border-bottom 1px solid rgba(0,0,0,.3)
			&:last-child
				border none
			&.active 
				background-image url('../../images/plate-back.png')
			a 
				display block 
				width 100%
				height 100%
	
	.rank-wra
		width 960px
		.rank-soft 
			display none 
			&.active 
				display block
			&.game 
				.rank
					ul 
						li 
							line-height 40px
							img 
								display none 
							&.active 
								line-height 50px
								img 
									display inline-block						
			.rank
				width 320px 
				line-height 50px
				background-image url('../../images/plate-back.png')
				float left
				&:nth-child(2n)
					background-image none
					background-color rgba(51, 51, 51, .5)
					h4 
						background-color rgba(34, 34, 34, 0.8)
				&:nth-child(2n-1)
					box-shadow 0 0 10px 0 rgba(0,0,0,.5)
				h4 
					height 50px 
					width 100%
					background-color rgba(0,0,0,.5)
					padding 0 10px 
					box-sizing border-box
					font-size 16px 
				ul 
					li 
						padding-left 18px
						&:hover 
							background-color rgba(0,0,0,.4)
						i 
							font-style normal
							display inline-block
							width 10px 
							vertical-align middle
						img 
							width 36px 
							height 36px 
							display inline-block
							vertical-align middle
							margin-left 10px
						span 
							display inline-block
							vertical-align middle
							width 220px
							margin-left 10px
				
		.pic-wra
			.pic-nav
				font-size 0
				a 
					display inline-block
					font-size 14px
					margin-right 12px
					margin-bottom 12px
					width 80px 
					height 40px 
					line-height 40px 
					text-align center
					background-color rgba(0,0,0,.5)
					color #999
					&.active 
						background-color rgba(141,30,40,.8)
			h4 
				font-size 16px
				margin-bottom 12px
			ul
				&.vector
					li 
						width 290px 
						height 290px
						float left 
						margin 0 30px 15px 0
						position relative
						&:hover 
							.img 
								transform scale(.95)
						&:nth-child(3n)
							margin-right 0
						.img 
							width 100%
							height 100%
							overflow hidden
							transition all .2s
						img 
							height 100%
							margin-left 50%
							transform translateX(-50%)
						p 
							position absolute
							bottom 0px
							left 0px
							height 40px
							line-height 40px 
							width 100%
							box-sizing border-box
							padding 0 15px
							background-color rgba(0,0,0,.5)
				&.pic 
					li 
						float left
						margin 5px 
						overflow hidden
						position relative
						&:hover 
							.mask 
								transform translateY(0)
						img 
							height 100%
							width 100%
						.mask
							position absolute
							width 100%
							height 100%
							left 0px
							top 0px
							background linear-gradient(to top, rgba(0,0,0,.8), rgba(0,0,0,0))
							padding 80px 0 0
							box-sizing border-box
							text-align center
							transform translateY(100%)
							transition all .4s
							p 
								margin-bottom 15px
								max-height 3.2em 
								overflow hidden
							// i 
							// 	display block
							// 	width 24px 
							// 	height 24px 
							// 	text-align center
							// 	line-height 24px 
							// 	font-size 22px
							// 	margin 0 auto
							// 	cursor pointe
				&.png 
					li 
						width 290px 
						height 300px 
						float left
						margin 0 30px 30px 0 
						padding 10px 20px 
						box-sizing border-box
						background-color #333333
						transition all .4s
						transform translateY(0)
						&:hover 
							transform translateY(-10px)
							.img 
								.add 
									opacity 1
									p 
										margin-top 0
						&:nth-child(3n)
							margin-right 0
						.img 
							width 250px 
							height 250px 
							overflow hidden
							background-image url('../../images/png-back.png')
							background-repeat no-repeat
							position relative
							img 
								max-height 85%
								width auto
								margin-left 50%
								margin-top 50%
								transform translate(-50%,-50%)
							.add
								position absolute	
								width 100%
								height 100%
								overflow hidden
								background-color rgba(0,0,0,.4)
								padding 10px
								box-sizing border-box
								top 0px
								left 0px
								opacity 0
								i.icon-heart 
									font-size 26px 
								p 
									margin-top 10px
									transition all .4s
						p 
							margin-top 10px
		
@import('vender.styl')
main 
	width auto
.banner-wra 
	width 100%
	height 350px  
	position relative
	background-size cover
	.banner-back 
		position absolute
		width 100%
		height 100%
		.img 
			overflow hidden
			transform translate3d(0,0,0)
			position absolute
			top 0
			left 0
			bottom 0
			right 0
			filter blur(65px)
			&:after 
				content ""
			    background radial-gradient(ellipse closest-side,hsla(0,0%,100%,.3) 0,rgba(0,0,0,.6) 100%)
			    transition .3s
			    width 100%
			    height 100%
			    position absolute
			    left 0
			    top 0
			img 
				vertical-align top
				width 100%
				height 44%
				margin-top 125px
				object-fit cover 
	    .txt 
			height 330px
			padding-top 20px 
			margin-left -50% 
			text-align center	    
			position absolute
			left 50%
			width 100%
			min-width 1200px
			text-shadow 1px 1px 3px #131111
			button 
				outline none
				border none 
				width 300px 
				height 45px 
				line-height 45px 
				border-radius 5px 
				background-color #151515
				font-size 20px
				margin-top 20px
				cursor pointer
				i 
					margin-right 8px
			.banner-icon
				width 100px 
				height 100px 
				margin auto 
				img 
					width 100%
					height 100%
			h1 
				font-size 26px
				margin-bottom 15px
			.info 
				span 
					display inline-block
					width 133px
					height 40px
					border-right 2px solid rgba(155,155,155,0.8)
					&:last-child 
						border none
					i 
						display block
						height 20px
						line-height 20px
						&.icon-time 
							font-size 16px
						&.icon-class
							font-size 15px
						&.icon-language
							font-size 18px
						&.icon-save,&.icon-envir
							font-size 21px
							
 			.interactions
				margin-top 20px
				i 
					margin-right 5px
					font-size 20px
					vertical-align middle
				span 
					cursor pointer
					margin 0 20px
					&.up-down
						span.sup
							i 
								vertical-align top
								color #ec3950
						span.unsup
							i 
								transform rotate(180deg)
						i 
							display inline-block
							
.container
	width 1200px 
	margin 20px auto
	.content 
		overflow hidden
	.fix-top
		width 100%
		top 0px
		left 0px
		z-index 9999
		&.active 
			position fixed
			.fix-bg 
				display block
			nav 
				position absolute
				top 60px
				border-top 2px solid #000 
				border-bottom none
				left 50%
				transform translateX(-50%)
		.fix-bg
			height 60px 
			display none
			overflow hidden
			box-shadow 0 0 15px 0 rgba(0,0,0,.5)
			position relative
			background-color #ddd
		.fix-img 
			width 100%
			height 100%
			background-size 250%
			position absolute
			top 0px
			left 0px
			width 100%
			filter blur(5px)
			background-repeat no-repeat
			background-position center
		.fix-con
			width 1200px 
			margin 0 auto
			height 100% 
			text-shadow 1px 1px 3px #131111
			position relative 
			z-index 2
			line-height 60px
			.img 
				width 40px 
				height 40px 
				margin-top 10px
				img 
					width 100%
					height 100%
			p
				font-size 20px
				width 700px
				margin 0 auto
				text-align center
			.down-btn 
				position absolute
				right 0
				top 10px
				width 200px 
				height 40px 
				background-color #222
				color #fff 
				text-align center
				line-height 40px
				border-radius 5px
				cursor pointer
				i 
					margin-right 8px
					font-size 19px
					vertical-align text-bottom
	nav 
		font-size 0
		text-align center
		margin-top 20px
		border-bottom 2px solid #000
		width 1200px 
		margin 0 auto 
		li 
			display inline-block
			font-size 16px 
			width 200px 
			height 40px
			line-height 40px 
			position relative
			background-color #333
			cursor pointer
			box-shadow 0 0 5px 0 rgba(0,0,0,.4)
			&.active,&:hover
				background-color #111
				box-shadow 0 0 15px 0 rgba(0,0,0,.4)
				z-index 2
	
	section 
		border-top 3px solid #333
		margin-top 20px
		h2,h3
			font-size 22px 
			text-align center
			margin 20px 0
		&.content 
			padding 0 60px 
			border none
		&.relation-soft
			.softwra
				margin-top 40px
				position relative
				.left-arr,.right-arr
					position absolute
					width 50px 
					top 45%
					left -70px
					height 50px 
					cursor pointer
				.right-arr
					right -70px
					left auto 
					transform rotate(180deg)
			.show-wra
				width 1200px
				overflow hidden
				height 180px
				ul 
					width 10000px
					li 
						width 160px 
						height 180px	
						position relative
						float left
						margin-right 10px
						&:nth-child(7n+1)
							margin-left 10px
						&:hover 
							.back 
								top 0
						.back
							position absolute
							top 30px
							left 0
							height 180px 
							width 100%
							background-color rgba(51, 51, 51, 0.5)
							transition all .4s
						.con 
							position relative 
							z-index 2
							overflow hidden
							.img 
								width 75px 
								height 75px 
								margin 15px auto 
								img 
									width 100%
									height 100%
							p 
								margin 20px 20px 0
								height 4.8em 
								overflow hidden
								text-align center
								
		&.relation-topic
			.topic-wra
				margin-bottom 20px
				.img 
					width 398px 
					height 248px 
					border 1px solid #999 
					float left							
					margin-right 20px 
					background-color rgba(0,0,0,.3)
					overflow hidden
					position relative
					img
						position absolute
						height 100%
						top 50%
						left 50%
						transform translate(-50%,-50%)
						&.thumb 
							z-index 2
							width 100px 
							height 100px 
					.back-img
						width 100%
						height 100%
						background-size 50%
						filter blur(10px)
						background-repeat no-repeat
						background-position center
				.topic-con 
					overflow hidden
					height 250px 
					position relative
					margin-right 50px
					.title 
						font-size 20px 
						height 3.2em 
						overflow hidden
					.coomon_999
						margin-top 15px 
						height 6.4em 
						overflow hidden
					span 
						position absolute
						width 140px 
						height 40px 
						line-height 40px 
						text-align center
						left 0
						bottom 0
						background-color #111
						border-radius 5px 
						
		&.relation-article
			ul 
				float left
				li 
					border-left 1px solid #999
					width 380px 
					height 40px
					line-height 40px 
					padding-left 14px 
					box-sizing border-box
					margin-right 20px 
					position relative
					.show-article 
						display none
						.img 
							float left
							margin-right 10px 
							width 100px 
							height 74px
							overflow hidden
							img 
								height 100%
								margin-left 50%
								transform translateX(-50%)
						p 
							overflow hidden
							height 6.4em 
							font-size 12px 
							line-height 1.6em
					&:before 
						content ""
						position absolute
						width 7px 
						height 7px
						background-color #999 
						border-radius 50%
						margin-top -3px
						left -4px
						top 50%
					&.active 
						height auto
						.common_ovh
							color #fff
						&:before 
							display none
						.show-article 
							display block
.error-box {
	background-color: #333;
    text-align: center;
    line-height: 40px;
    font-size: 14px;
    z-index: 99;
    width: 400px;
    height: 300px;
    left: 50%;
    top: 50%;
    margin-left: -200px;
    margin-top: -140px;
    position: fixed;
    box-shadow: 0px 0px 15px 0 rgba(0,0,0,.5);
}
.error-box .error-name {
	height: 50px;
    line-height: 50px;
    background: #23A901;
    color: #fff;
    font-size: 18px;
    background-image: linear-gradient(0deg,#23A901,#63B73D);
}
.error-box .error-title {
	margin: 13px 0;
    height: 30px;
    line-height: 1.3em;
    padding: 0 25px 0 10px;
    box-sizing: border-box;
    text-align: left;
}
.error-box label {
	font-size: 14px;
    display: block;
    width: 100px;
    line-height: 31px;
    margin-left: 155px;
    text-align: left;
    position: relative;
}
.error-box label.textarea {
	position: absolute;
    right: 50%;
    top: 50%;
    margin-top: -30px;
    margin-right: -50px;
    display: none;
}
.error-box input[type=radio] {
	vertical-align: middle;
    margin: 0 2px 0 5px;
    outline-style: none;
}
.error-box .text-ipt{
	width: 220px;
    height: 110px;
    outline-style: none;
    box-sizing: border-box;
    padding: 10px;
    resize: none;
    background: #f4f4f4;
    font-size: 14px;
    border: none;
    margin-top: -6px;
}
.error-box .error-bottom {
	height: 60px;
    margin-top: 4px;
    text-align: left;
    background-color: #333;
}
.error-box .click-toggle {
    display: inline-block;
    padding: 0 40px;
    position: absolute;
    bottom: 30px;
    border-radius: 5px;
    background: #999;
    font-size: 14px;
    height: 33px;
    line-height: 33px;
    right: 65px;
    cursor: pointer;
}
.error-box .ipt {
	padding: 6px 40px;
    cursor: pointer;
    background: #23A901;
    color: #fff;
    outline-style: none;
    border: none;
    border-radius: 5px;
    margin-left: 60px;
}
.error-box .error_text {
    font-size: 14px;
    font-weight: 400;
    margin-top: -12px;
    color: #ff3a3a;
    margin-left: 10px;
    max-width: 100%;
    text-align: center;
}
#recharge {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 900;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,.5);
}
#recharge .pay {
    width: 500px;
    border-radius: 10px;
    padding 10px 20px;
    box-sizing border-box
    overflow: hidden;
    background-color: #333;
    position: absolute;
    top: 50%;
    left: 50%;
    -webkit-transform: translate(-50%, -50%);
    -moz-transform: translate(-50%, -50%);
    -ms-transform: translate(-50%, -50%);
    -o-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
}
#recharge .top {
	text-align center
    margin-bottom: 20px;
}
#recharge .top .avatar {
    display: inline-block;
    vertical-align: middle;
    width: 60px;
    height: 60px;
    border-radius: 50%;
    margin-right: 30px;
}
#recharge .top .nickname {
    font-size: 20px;
    font-weight bold
}
#recharge .pay .types {
    font-size: 0;
}
#recharge .pay .type-item {
    display: inline-block;
    font-size: 16px;
    text-align: center;
    line-height: 40px;
    width: 50%;
    background-color rgba(17, 17, 17, 0.5);
    cursor: pointer;
    box-sizing: border-box;
    color #999;
}
#recharge .pay .type-item.active {
    box-shadow 0 0 15px 0 rgba(0,0,0,.5)
    background-image url('../../images/plate-back.png')
    color #fff;
}
#recharge .pay .close {
    position: absolute;
    top: 10px;
    right: 10px;
    font-size: 18px;
    padding: 5px 10px 10px;
    color: #fff;
    cursor: pointer;
}
#recharge .hr {
	height 1px;
	width 100%
	background-color #999
	margin-top 20px;
}
#recharge .should-pay-num {
    margin -12px auto 20px
    width 78px 
 	background-color #333
 	text-align center
 	color #999
}
#recharge .item-warpper {
    display: none;
    padding 30px 0 20px;
}
#recharge .item-warpper.active {
    display: block;
}
#recharge .money-item {
    width: 150px;
    height: 40px;
    line-height: 40px;
    text-align: center;
    float: left;
    margin-right: 5px;
    margin-top: 10px;
    background-color rgba(17, 17, 17, .5)
    position: relative;
    box-sizing: border-box;
    cursor: pointer;
    border-radius 5px
}
#recharge .money-item:nth-child(-n+3) {
    margin-top: 0;
}
#recharge .money-item:nth-child(3n) {
    margin-right: 0;
}
#recharge .money-item .should-pay {
    display: none;
}
#recharge .money-item .num {
    font-size: 24px;
    color: #FB6D5F;
    margin-right: 5px;
    font-style: normal;
}
#recharge .money-choose .pay-type {
	width 220px 
	height 40px 
	border-radius 5px
}
#recharge .money-choose .pay-type i {
	margin-right 8px 
	color #00C700
	font-size 18px 
	vertical-align sup
}
#recharge .money-choose .pay-type i.icon-alipay {
	color #01A1EB
}
#recharge .money-choose .pay-type:first-child {
	margin-right 20px	
}
#recharge .money-choose .pay-type.active {
	border 1px solid #FA1C31
	box-shadow 0 0 0 
	background-image none
}
#recharge .money-item.active {
    background-color rgba(0,0,0,.6)
}
#recharge .money-choose .pay-type .ali-pay-icon,#recharge .money-choose .pay-type .wechat-pay-icon{
    display: inline-block;
    vertical-align: middle;
    margin-right: 10px;
    width: 24px;
    height: 24px;
}


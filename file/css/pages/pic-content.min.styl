@import('vender.styl')
.content
	article
		margin 30px 30px 0 0
		width 800px 
		.img-wra
			width 100%
			height 520px 
			position relative
			// display none
			.img 
				width 520px 
				height 520px 
				margin 0 auto 
				overflow hidden
				position relative
				ul 
					width 10000px 
					li 
						float left
						width 520px 
						height 520px 
						overflow hidden
						position relative
						img 
							max-height 100%
							max-width 100%
							width auto 
							height auto 
							position absolute
							left 50%
							top 50%
							transform translate(-50%,-50%)
			.prev-btn,.next-btn 
				position absolute
				width 50px 
				height 50px 
				border-radius 50%
				cursor pointer
				top 50%
				margin-top -25px
				font-size 50px
				line-height 50px
				color #999
				opacity .5
			.prev-btn
				left 0
				transform rotate(180deg)
			.next-btn
				right 0	
		.next-atlas
			width 800px 
			height 520px 
			background-color rgba(0,0,0,.4)
			padding 50px 25px
			box-sizing border-box
			position relative
			overflow hidden
			display none
			.t-tip
				position absolute
				left 25px 
				top 25px 
				font-size 16px
				color #ddd
			li 
				width 180px 
				height 180px
				float left
				overflow hidden
				margin-right 10px
				margin-top 20px
				position relative
				&:nth-child(4n)
					margin-right 0
				&:hover 
					img 
						transform translateX(-50%) scale(1.1)
				img 
					height 100%
					margin-left 50%
					transform translateX(-50%)
					transition all .2s
				p 
					position absolute
					bottom 0px
					width 100%
					left 0px
					box-sizing border-box
					padding-right 30px
					line-height 30px 
					background-color rgba(0,0,0,.5)
					text-indent 5px 
					font-size 12px 
				.num
					position absolute
					bottom 0px
					right 0px
					height 30px 
					width 30px 
					text-align center
					line-height 30px 
					background-color rgba(0,0,0,.6)
			.atlas-arr
				position absolute
				width 80px 
				height 100px 
				cursor pointer
				top 50%
				margin-top -50px
				color #ddd
				background-color rgba(0,0,0,.9)
				transition all .2s
				span 
					display inline-block
					width 25px 
					margin 10px 0 0 7px
				i 
					font-size 50px 
					position absolute
					top 50%
					margin-top -25px
				&.atlas-left
					left 0
					margin-left -50px
					&:hover 
						margin-left 0
					span 
						float right 
					i 
						transform rotate(180deg)
				&.atlas-right
					margin-right -50px
					right 0
					&:hover 
						margin-right 0
		.other-pic
			width 100%
			height 160px 
			padding 20px 10px
			box-sizing border-box
			overflow hidden
			position relative
			background-color rgba(0,0,0,.3)
			margin-top 30px
			ul 
				width 9000px
				li 
					width 120px
					height 120px
					float left
					margin-right 12px 
					border 1px solid #999
					box-sizing border-box
					position relative
					&.active 
						border-color #FA1C31
					img 
						max-height 100%
						max-width 100%
						width auto 
						height auto 
						position absolute
						left 50%
						top 50%
						transform translate(-50%,-50%)
			.arr-left,.arr-right 
				position absolute
				width 40px 
				height 40px 
				border-radius 50%
				cursor pointer
				top 50%
				margin-top -20px
				font-size 40px
				line-height 40px
				color #fff
				text-shadow 1px 1px 3px #131111
			.arr-left
				left 0
				transform rotate(180deg)
			.arr-right
				right 0	
	aside
		width 350px
		.img-info
			h1 
				font-size 22px 
				margin 20px 
				line-height 1.6em 
				height 3.2em 
				overflow hidden
				text-align center
				font-weight bold
			button
				outline none
				border none 
				display block
				color #fff
				font-size 18px 
				width 100%
				height 50px
				line-height 50px
				background-color rgba(0,0,0,.5)
				border-radius 5px
				margin-top 20px
				&.dwon2
					background-color rgba(0,0,0,.3)
				&.col 
					background-color transparent
					border 1px solid #fff 
					height 38px
					line-height 36px
					font-size 14px
					i 
						margin-right 8px 
						font-size 18px
						color red
						vertical-align middle
		.info
			margin-top 30px
			li 
				line-height 38px
		.soft 
			width 100%
			height 70px 
			background-image url('../../images/plate-back.png')
			background-repeat repeat
			padding 10px 20px 
			box-sizing border-box
			border-radius 5px
			margin 20px 0
			.img 
				float left
				width 50px 
				height 50px 
				overflow hidden
				margin-right 20px 
				img 
					width 100%
					height 100%
			.con 
				overflow hidden
				.common_ovh
					margin-top 8px
		.pic-desc
			margin-top 10px
			height 7.6em 
			overflow hidden
				
section 
	h3 
		height 45px 
		line-height 45px 
		font-size 16px 
		padding 0 10px 
		width 100%
		box-sizing border-box
		background-image url('../../images/plate-back.png')
		background-repeat repeat
		margin 22px 0 10px 0
		.fr 
			color #FA1C31	
			font-size 14px 	
	&.rel-topic
		ul 
			height 440px
			li 
				float left
				width 294px 
				margin-right 8px 
				position relative 
				overflow hidden
				background-color #fff
				&:hover 
					.col,.title 
						transform translate(0)
				&:nth-child(1),&:nth-child(3)
					height 440px 
				&:nth-child(2),&:nth-child(4),&:nth-child(5),&:nth-child(6)
					height 215px 
				&:nth-child(4)
					margin-right 0
				&:nth-child(5)
					margin-left 302px
					margin-top -215px
				&:nth-child(6)
					float right
					margin-right 0
					margin-top -215px
				img 
					position absolute
					height 100%
					width auto
					left 50%
					top 50%
					transform translate(-50%,-50%)
				.col,.title 
					height 50px
					line-height 50px 
					position absolute
					left 0px
					width 100%
					z-index 2
					transition all .2s
					box-sizing border-box
					padding 0 10px
				.col 
					top 0px
					background linear-gradient(to bottom, rgba(0,0,0,.9), rgba(0,0,0,0))
					transform translateY(-50px)
					font-size 20px
					height 40px 
					.fr 
						margin 12px
						display block 
						width 20px
						height 20px
						cursor pointer
						text-align center
						line-height 20px
				.title 
					bottom 0px	
					background linear-gradient(to top, rgba(0,0,0,.9), rgba(0,0,0,0))
					transform translateY(50px)
					font-size 18px
				
	&.rec-matter,&.new-matter
		ul 
			li 
				width 290px 
				height 290px 
				margin 0 13px 15px 0
				padding 12px 
				box-sizing border-box
				float left
				background-color rgba(0,0,0,.2)
				&:hover 
					.img 
						.mask 
							display block
				&:nth-child(4n)
					margin-right 0
				.img 
					width 100%
					height 100%
					position relative
					overflow hidden	
					img 
						height 100%
						margin-left 50%
						transform translateX(-50%)
					.mask 
						position absolute
						left 0
						top 0
						width 100%
						height 100%
						background-color #FF5146
						padding-top 50px 
						box-sizing border-box
						text-align center
						display none
						.common_ovh
							font-size 18px 
							width 90%
							margin 10px auto
						span 
							display inline-block
							width 123px 
							height 35px 
							background-color #fff 
							color #FF5146
							text-align center
							line-height 35px 
							border-radius 5px
							margin-top 60px
							
.popped-img {
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,.7);
  left: 0; 
  top: 0;
  z-index: 9999;
  display: none;
}
.popped-img .swiper-img-wra {
  width: 900px;
  height: 600px;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
}
.popped-img .swiper-img-wra .close i {
  display: inline-block;
  line-height: 35px;
  color #ddd
}
.popped-img .swiper-img-wra .close {
  position: absolute;
  right: 0px;
  top: 0px;
  width: 35px;
  line-height: 35px;
  height: 34px;
  font-size: 36px;
  background-color: rgba(0,0,0,0.6);
  -moz-border-radius: 50%;
       border-radius: 50%;
  color: #fff;
  text-align: center;
  cursor: pointer;
}
.popped-img .swiper-img-wra .btn {
  	position: absolute;
	width: 50px;
	height: 50px;
	border-radius: 50%;
	cursor: pointer;
	top: 50%;
	margin-top: -25px;
	font-size: 50px;
	line-height: 50px;
	color: #fff;
}
.popped-img .swiper-img-wra .next-btn {
  left: auto;
  right: 0px;
}
.popped-img .swiper-img-wra .prev-btn {
  display: -webkit-box /* OLD - iOS 6-, Safari 3.1-6 */;
  display: -moz-box /* OLD - Firefox 19- (buggy but mostly works) */;
  display: inline-block;
  color: #fff;
  -webkit-transform: rotate(180deg);
  -khtml-transform: rotate(180deg);
  -moz-transform: rotate(180deg);
  -ms-transform: rotate(180deg);
  transform: rotate(180deg);
}

.popped-img .swiper-img-wra .popped-img-wra {
  width: 700px;
  height: 600px;
  margin: 0 auto;
  position: relative;
  overflow: hidden;
}
.popped-img .swiper-img-wra .popped-img-wra ul li {
  width: 800px;
  height: 600px;
  float: left;
}
.popped-img .swiper-img-wra .popped-img-wra ul li .img {
  position: relative;
  width: 100%;
  height: 100%;
}
.popped-img .swiper-img-wra .popped-img-wra ul li .img img {
  max-height: 100%;
  max-width: 100%;
  width: auto;
  height: auto;
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  -khtml-transform: translate(-50%, -50%);
  -moz-transform: translate(-50%, -50%);
  -ms-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
}							

						

@import('vender.styl')
section 
	border-top 3px solid #333
	margin-top 20px
	h3
		font-size 22px 
		text-align center
		margin 20px 0
	&.content 
		border none
		.title 
			height 120px 
			width 100%
			background-image url('../../images/plate-back.png')
			background-repeat repeat
			text-align center
			overflow hidden
			h1 
				font-size 24px 
				font-weight bold
				width 75%
				margin 25px auto 0
			p 
				margin-top 20px
				span 
					display inline-block
					width 330px 
					
	&.relation-topic
		.topic-wra
			margin-bottom 20px
			.img 
				width 398px 
				height 248px 
				border 1px solid #999 
				float left							
				margin-right 20px 
				background-color rgba(0,0,0,.3)
				overflow hidden
				position relative
				img
					position absolute
					height 100%
					top 50%
					left 50%
					transform translate(-50%,-50%)
					&.thumb 
						z-index 2
						width 100px 
						height 100px 
				.back-img
					width 100%
					height 100%
					background-size 50%
					filter blur(10px)
					background-repeat no-repeat
					background-position center
			.topic-con 
				overflow hidden
				height 250px 
				position relative
				margin-right 50px
				.title 
					font-size 20px 
					height 3.2em 
					overflow hidden
				.coomon_999
					margin-top 15px 
					height 6.4em 
					overflow hidden
				span 
					position absolute
					width 140px 
					height 40px 
					line-height 40px 
					text-align center
					left 0
					bottom 0
					background-color #111
					border-radius 5px 
					
	&.relation-article
		ul 
			float left
			li 
				border-left 1px solid #999
				width 380px 
				height 40px
				line-height 40px 
				padding-left 14px 
				box-sizing border-box
				margin-right 20px 
				position relative
				.show-article 
					display none
					.img 
						float left
						margin-right 10px 
						width 100px 
						height 74px
						overflow hidden
					p 
						overflow hidden
						height 6.4em 
						font-size 12px 
						line-height 1.6em
				&:before 
					content ""
					position absolute
					width 7px 
					height 7px
					background-color #999 
					border-radius 50%
					margin-top -3px
					left -4px
					top 50%
				&.active 
					height auto
					.common_ovh
						color #fff
					&:before 
						display none
					.show-article 
						display block